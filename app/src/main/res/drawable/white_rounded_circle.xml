<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <padding
                    android:bottom="1dp"
                    android:left="1dp"
                    android:right="1dp"
                    android:top="1dp" />

            <solid android:color="#00CCCCCC" />

            <corners android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <padding
                    android:bottom="1dp"
                    android:left="1dp"
                    android:right="1dp"
                    android:top="1dp" />

            <solid android:color="#10CCCCCC" />

            <corners android:radius="3dp" />
        </shape>
    </item>


    <item
            android:left="0dp"
            android:right="0dp"
            android:top="0dp"
            android:bottom="2dp">
        <shape
                android:shape="oval" android:padding="10dp">
            <solid android:color="@color/white"/>
            <!--<corners android:radius="100dp"/>-->
            <stroke android:width="0.5dp" android:color="@color/grey"/>
            <padding android:bottom="@dimen/padding_medium" android:left="@dimen/padding_medium"
                     android:right="@dimen/padding_medium" android:top="@dimen/padding_medium"/>
        </shape>
    </item>
